<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextViewCustom">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_5</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorTextSetting</item>
        <item name="colorSwitchThumbNormal">@color/colorTextSetting</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>
</resources>

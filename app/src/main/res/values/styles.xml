<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextViewCustom">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_5</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorTextSetting</item>
        <item name="colorSwitchThumbNormal">@color/colorTextSetting</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <!--text run slow -->
    <style name="SlowMoveText">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextMenu">
        <item name="android:paddingStart">@dimen/size_20</item>
        <item name="android:paddingEnd">@dimen/size_20</item>
        <item name="android:paddingBottom">@dimen/size_10</item>
        <item name="android:paddingTop">@dimen/size_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:background">@drawable/selector_button_green_a240</item>
    </style>
</resources>
